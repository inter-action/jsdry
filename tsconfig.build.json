{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "declaration": true,
        "jsx": "react",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node"
    },
    "exclude": [
        "build",
        "node_modules",
        "coverage",
        "config",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.story.tsx",
        "**/*.spec.ts"
    ]
}